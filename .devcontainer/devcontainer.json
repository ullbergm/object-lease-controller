{
  "name": "DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postAttachCommand": [
    "/bin/bash",
    ".devcontainer/post-install.sh"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      },
      "extensions": [
        "golang.Go",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools"
      ]
    }
  }
}
