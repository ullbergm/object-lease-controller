{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":semanticCommits",
        ":maintainLockFilesWeekly"
    ],
    "commitMessageTopic": "{{depName}}",
    "commitMessageExtra": "to {{newVersion}}",
    "commitMessageSuffix": "",
    "packageRules": [
        {
            "matchDatasources": [
                "go",
                "golang-version"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "commitMessagePrefix": "feat(go)!: "
        },
        {
            "matchDatasources": [
                "go",
                "golang-version"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "semanticCommitType": "feat",
            "semanticCommitScope": "go"
        },
        {
            "matchDatasources": [
                "go",
                "golang-version"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "semanticCommitType": "fix",
            "semanticCommitScope": "go"
        },
        {
            "matchDatasources": [
                "go",
                "golang-version"
            ],
            "addLabels": [
                "renovate/go"
            ]
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "commitMessageTopic": "container image {{depName}}"
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "commitMessagePrefix": "feat(container)!: "
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "semanticCommitType": "feat",
            "semanticCommitScope": "container"
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchUpdateTypes": [
                "digest",
                "patch"
            ],
            "semanticCommitType": "fix",
            "semanticCommitScope": "container"
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "addLabels": [
                "renovate/container"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "commitMessagePrefix": "feat(github-action)!: "
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "semanticCommitType": "feat",
            "semanticCommitScope": "github-action"
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "semanticCommitType": "fix",
            "semanticCommitScope": "github-action"
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "addLabels": [
                "renovate/github-action"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch"
            ],
            "groupName": "all github actions",
            "groupSlug": "all-github"
        }
    ]
}
